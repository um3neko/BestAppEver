<UserControl
    x:Class="WpfApp2.Control.Goals"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp2.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WpfApp2.ControlViewModel"
    d:DesignHeight="150"
    d:DesignWidth="400"
    mc:Ignorable="d">
    
    <UserControl.DataContext>
        <vm:GoalControlViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#63EEC5" />
                <GradientStop Offset="0.9" Color="#A12699" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Source="\Resources\Contorl\GoalControl\comboburst-1.png" />
        <TextBlock
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10,25,10,10"
            FontSize="12"
            Text="Lorem ipsum dolor sit amet, sed do eiusmod tempor incididunt ut labore consectetur adipiscing elit"
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="Goal_Name"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="Lorem ipsum dolor" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="{Binding Time}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Margin="25,0,0,0"
            Text="Sessions : " />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Margin="80,0,0,0"
            Text="{Binding Sessions}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Margin="25,0,0,0"
            Text="Goal :" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Margin="60,0,0,0"
            Text="{Binding CurrentTimeGoal}" />
        <ProgressBar
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,25,0,0"
            Foreground="#FF4DE29A"
            Value="50" />

        <Grid Grid.Row="0" Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>

            <Image Source="\Resources\Contorl\GoalControl\reversearrow.png" />

            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="16"
                Text="LVL : " />
            <TextBlock
                x:Name="LVL"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="50,0,0,0"
                FontSize="16"
                Text="{Binding LVL}" />
        </Grid>

    </Grid>
</UserControl>
