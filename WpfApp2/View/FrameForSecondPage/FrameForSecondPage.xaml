<Page x:Class="WpfApp2.View.FrameForSecondPage.FrameForSecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.View.FrameForSecondPage"
      xmlns:vm="clr-namespace:WpfApp2.ViewModel.FrameForSecondPageViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FrameForSecondPage">
    <Page.DataContext>
        <vm:FrameForSecondPageViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Command="{Binding ReturnCommand}"></Button>
        <Frame
            Grid.Row="1"
            Content="{Binding CurrentPage}"
            Opacity="{Binding CurrentOpacity}"
            NavigationUIVisibility="Hidden" />
    </Grid>
    
</Page>
